{
  "name": "oyster-linter",
  "displayName": "Oyster Linter",
  "description": "Lints Oyster 4S scripts for syntax and command errors.",
  "icon": "img/oysterIcon.png",
  "publisher": "AnActualPan",
  "version": "2.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Linters"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "oyster",
        "aliases": [
          "Oyster 4.1.0",
          "Oyster"
        ],
        "icon": {
          "light": "img/oysterIcon.png",
          "dark": "img/oysterIcon.png"
        },
        "extensions": [
          ".osf"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "oyster",
        "scopeName": "source.oyster",
        "path": "./syntaxes/oyster.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/vscode": "^1.109.0",
    "@vscode/vsce": "^3.7.1",
    "clean-webpack-plugin": "^4.0.0",
    "path": "^0.12.7",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack-cli": "^6.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Danicus2000000/oyster-linter.git"
  }
}