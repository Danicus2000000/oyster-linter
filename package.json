{
  "name": "oyster-linter",
  "displayName": "Oyster Linter",
  "description": "Lints Oyster 4S scripts for syntax and command errors.",
  "version": "1.0.0",
  "engines": {
    "vscode": ">=1.80.0"
  },
  "categories": [
    "Linters"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "oyster",
        "aliases": [
          "Oyster 4S",
          "oyster"
        ],
        "extensions": [
          ".txt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "oyster",
        "scopeName": "source.oyster",
        "path": "./syntaxes/oyster.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@vscode/vsce": "^3.0.0"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/Danicus2000000/oyster-linter.git"
  }
}
